<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Sign_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/signup_username"
                style="@style/edit_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:drawableLeft="@drawable/user"
                android:hint="Username"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/signup_name"
                style="@style/edit_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:drawableLeft="@drawable/user"
                android:hint="Name"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/signup_Email"
                style="@style/edit_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:drawableLeft="@drawable/user"
                android:hint="Email Id"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/signup_Contact"
                style="@style/edit_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:drawableLeft="@drawable/user"
                android:hint="Contact No"
                android:minHeight="48dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin">

                <EditText
                    android:id="@+id/signup_password"
                    style="@style/edit_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icons8_lock_500"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:minHeight="48dp"
                    android:padding="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/signup_password_show"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/eye" />

                <ImageView
                    android:id="@+id/signup_password_hidden"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/hidden"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin">

                <EditText
                    android:id="@+id/signup_confirmpassword"
                    style="@style/edit_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icons8_lock_500"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:minHeight="48dp"
                    android:padding="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/signup_confirmpassword_show"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/eye" />

                <ImageView
                    android:id="@+id/signup_confirmpassword_hidden"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/hidden"
                    android:visibility="gone" />
            </FrameLayout>

            <RadioGroup
                android:id="@+id/signup_gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/signup_male"
                    style="@style/radio_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/signup_female"
                    style="@style/radio_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />
            </RadioGroup>

            <Spinner
                android:id="@+id/signup_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <Button
                    android:id="@+id/main_button"
                    style="@style/button_20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Signup" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
